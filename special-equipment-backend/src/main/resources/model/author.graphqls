type Author {
    id: ID!
    firstName: String!
    lastName: String!
}

#schema省略,Query type is presumed to be the query root operation type of the schema像一般对象使用
extend type Query {
    findAllAuthors: [Author]!
    countAuthors: Int! @authr(qx:["ANONYMOUS"])
}

extend type Mutation {
    newAuthor(firstName: String!, lastName: String!) : Author!
}